<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-6 offset-3 mt-3">
    <h3>
      Volunteer for Event: <%= listing.eventName %>
    </h3>
  </div>

  <div class="card col-6 offset-3 mt-2 show-card volunteer-card">
    <img src="<%= volunteer.image ? volunteer.image.url : '/images/default-user.png' %>" 
         class="card-img-top show-img" 
         alt="<%= volunteer.username %>" 
         style="width: auto; height: auto; object-fit:contain">

    <div class="card-body">
      <h5 class="card-skills mt-3">
        <%= volunteer.username %>
      </h5>

      <h6 class="card-skills mt-3">
        <b>Email:</b> <%= volunteer.email %>
      </h6>

      <h6 class="card-skills mt-3">
        <b>Location:</b> <%= volunteer.location %>, <%= volunteer.country %>
      </h6>

      <h6 class="card-skills mt-3">
        <b>Skills:</b> <%= volunteer.skills %>
      </h6>

      <% if(volunteer.contactNumber) { %>
        <h6 class="card-skills mt-3">
          <b>Contact:</b> <%= volunteer.contactNumber %>
        </h6>
      <% } %>
    </div>
  </div>
</div>
